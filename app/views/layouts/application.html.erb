<!DOCTYPE html>
<html>
	<head>
		<title>Loanager | <%= @page_title %></title>
		<%= stylesheet_link_tag "bootstrap", :media => "all" %>
		<%= stylesheet_link_tag "styles", :media => "all" %>
		<%= javascript_include_tag "jquery-1.7.1.min" %>
		<%= javascript_include_tag "bootstrap-dropdown" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div class="container">
			<%= render :partial => "layouts/navbar" %>
			<div class="message">
				<% if flash[:notice] %>
					<%= flash[:notice]%>
				<% end %>
			</div>
			<%= yield %>
		</div>
	</body>
</html>
