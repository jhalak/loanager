<!DOCTYPE html>
<html>
	<head>
		<title>Loanager | <%= @page_title %></title>
		<%= stylesheet_link_tag "styles", :media => "all" %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div class="header">
			<div class="header-bav">
				<% if logged_in? %>
					<%= "Hello #{session[:username]}" %> | 
					<%= link_to ("Dashboard", :controller => "access", :action =>"dashboard") %> | 
					<%= link_to ("Logout", :controller => "access", :action =>"logout") %>
				<% else %>
					<%= "Hello Guest" %> | 
					<%= link_to ("Login", :controller => "access", :action =>"login") %>
				<% end %>				
			</div>
		</div>
		<div class="message">
			<% if flash[:notice] %>
			<%= flash[:notice]%>
			<% end %>
		</div>
		<%= yield %>
	</body>
</html>
