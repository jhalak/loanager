<h1>Edit user</h1>

<%= form_for(:user, :url => {:action => "update", :id => @user.id}) do |f| %>
	<table>
		<tr>
			<td>First Name</td>
			<td><%= f.text_field(:first_name) %></td>
		</tr>
		<tr>
			<td>Last Name</td>
			<td><%= f.text_field(:last_name) %></td>
		</tr>
		<tr>
			<td>Username</td>
			<td><%= f.text_field(:username) %></td>
		</tr>
		<tr>
			<td>Password</td>
			<td><%= f.text_field(:password) %></td>
		</tr>
		<tr>
			<td>Email</td>
			<td><%= f.text_field(:email) %></td>
		</tr>
		<tr>
			<td colspan="2"><%= submit_tag("Update user") %></td>
		</tr>
	</table>	
<% end %>
