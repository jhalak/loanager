<%= link_to "Back", users_path, :class => "btn" %>

<h1><%= @user.username %></h1>

<dl>
	<dt>First Name</dt>
	<dd><%= @user.first_name %></dd>
	
	<dt>Last Name</dt>
	<dd><%= @user.last_name %></dd>
	
	<dt>Username</dt>
	<dd><%= @user.username %></dd>
		
	<dt>Email</dt>
	<dd><%= @user.email %></dd>
	
	<dt>Active</dt>
	<dd><%= @user.active ? "yes" : "No" %></dd>
	
	<dt>Created</dt>
	<dd><%= @user.created_at %></dd>
	
	<dt>Updated</dt>
	<dd><%= @user.updated_at %></dd>
</dl>
