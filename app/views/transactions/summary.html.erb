<%
#raise @user_gave.inspect
gtotal = ttotal = 0
%>
<h3>People took from me</h3>
<table>
	<tr>
		<td>Purpose</td>
		<td>To</td>
		<td>Amount</td>
	</tr>
<% @user_gave.each do |g| %>
	<tr>
		<td><%= g.title %></td>
		<td><%= g.to_name %></td>
		<td><%= g.amount %></td>
	</tr>
	<% gtotal += g.amount %>
<% end %>
	<tr>
		<td colspan="3">Total</td>
		<td><%= gtotal %></td>
	</tr>
</table>
 
<h3>I took from people</h3>
<table>
	<tr>
		<td>Purpose</td>
		<td>From</td>
		<td>Amount</td>
	</tr>
<% @user_took.each do |t| %>
	<tr>
		<td><%= t.title %></td>
		<td><%= t.from_name %></td>
		<td><%= t.amount %></td>
	</tr>
	<% ttotal += t.amount %>
<% end %>
	<tr>
		<td colspan="3">Total</td>
		<td><%= ttotal %></td>
	</tr>
</table>
 